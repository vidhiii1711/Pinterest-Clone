<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-600 px-10 py-5 text-white ">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="opacity-10 mt-3">
    <form action="createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 mt-4" type="file" name="postimage">
        <input class="block text-zinc-600 bg-white w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Title" name="title">
        <input class="block text-zinc-600 bg-white w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Description" name="description">
        <input class="block w-1/3 px-3 py-2  mt-2 rounded-md bg-zinc-900" type="submit" placeholder="Create post" value="Create post">
    </form>
</div>
